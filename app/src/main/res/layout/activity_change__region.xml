<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Change_Password">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-thin"
                    android:text="Email Change Request"
                    android:textSize="20sp" />


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Name"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="left"
                    android:text="New Region"
                    android:visibility="visible" />

                <RadioGroup
                    android:id="@+id/Radio_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/nr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NR" />

                    <RadioButton
                        android:id="@+id/sr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SR" />

                    <RadioButton
                        android:id="@+id/er"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ER" />

                    <RadioButton
                        android:id="@+id/wr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WR" />


                </RadioGroup>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:gravity="left"
                    android:text="Old Region"
                    android:visibility="visible" />

                <RadioGroup
                    android:id="@+id/oldRadio_region"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/oldnr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NR" />

                    <RadioButton
                        android:id="@+id/oldsr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SR" />

                    <RadioButton
                        android:id="@+id/older"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ER" />

                    <RadioButton
                        android:id="@+id/oldwr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WR" />


                </RadioGroup>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reason"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <Button
                    android:id="@+id/btnRequest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/primaryBlue"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="Request"
                    android:textAllCaps="false"
                    android:textColor="@color/colorInverted"
                    android:textSize="18sp" />


            </LinearLayout>
        </ScrollView>



    </RelativeLayout>


</LinearLayout>
